<odoo>
    <data>
    <record id="view_order_form_inherit" model="ir.ui.view">
      <field name="name">sale.order.form.inherit</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">

        <xpath expr="//field[@name='date_order']" position="after">
            <field name="date_initial_contract"/>
            <field name="date_contract_duration"/>
        </xpath>

        <xpath expr="//page[@name='other_information']" position="after">

            <page string="Vertragsdaten">
            <group>
                <field name="page_break_orderline"/>
                <field name="page_break_signature"/>
            </group>
            <group>
                <field name="contract_components"
                widget="section_and_note_one2many"
                       mode="tree,form"
                       readonly="state == 'sale' or locked">
                    <tree>
                        <field name="sequence" widget="handle" />
                        <field name="title"/>
                        <field name="name"/>
                        <field name="position" widget='selection'/>
                        <field name="order_inline_text" widget="boolean_toggle"/>
                        <field name="page_break" widget="boolean_toggle"/>
                        <field name="section_signature" widget="boolean_toggle"/>
                    </tree>
            <form>
                <group>
                    <field name="title"/>
                    <field name="name"/>
                    <field name="position"/>
                    <field name="order_inline_text"/>
                    <field name="model_id"/>
                    <field name="page_break"/>
                    <field name="text_block" widget="html" options="{'codeview': true, 'dynamic_placeholder': true}" />
                    <field name="sequence"/>
                    <field name="id"/>
                </group>
            </form>

                </field>

            </group>
               <group>
                        <field name="order_line_section" mode="tree" >
                        <tree create="false">
                            <field name="sequence" widget="handle" invisible="True"/>
                            <field name="display_type" />
                            <field name="name"  />
                            <field name="section_pauschal" widget="boolean_toggle"/>
                            <field name="section_stundensatz" widget="boolean_toggle"/>
                        </tree>
                        </field>
                    </group>
          </page>
        </xpath>

         <!--<xpath expr="//field[@name='order_line']/tree/field[@name='sequence']" position="after">
            <field name="print_price" invisible="1"/>
        </xpath>-->


      </field>
    </record>

    </data>
</odoo>
