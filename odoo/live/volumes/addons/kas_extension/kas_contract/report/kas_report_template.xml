<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <template id="kas_external_report">
        <div t-attf-class="header">
            <div class="row">
                <div class="col-3 mb4">
                    <img t-if="company.contract_logo" t-att-src="image_data_uri(company.contract_logo)" style="max-height: 133px;" alt="Logo"/>
                </div>
            </div>
        </div>

         <div t-attf-class="article o_report_layout_standard">
            <t t-out="0"/>
        </div>

        <div t-attf-class="footer o_standard_footer" style="position: fixed; bottom: 0cm; width: 100%;">
            <div class="text-center">
                <div t-if="report_type == 'pdf'" class="text-muted" style="text-align: right;">
                    Seite: <span class="page"/> / <span class="topage"/>
                </div>
                
                <div class="mb4">
                    <img t-if="company.contract_footer" t-att-src="image_data_uri(company.contract_footer)" style="max-height: 133px;" alt="Logo"/>
                </div>
                <div t-if="report_type == 'pdf' and display_name_in_footer" class="text-muted">
                    <span t-out="o.name">(document name)</span>
                </div>
            </div>
        </div>
    </template>

    <template id="kas_external_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <t t-call="kas_contract.kas_external_report"><t t-out="0"/></t>
    </template>

    <template id="kas_layout_header">
        <!-- Multi-Company-Logik -->
        <t t-if="not o and docs" t-set="o" t-value="docs[0]"/>
        <t t-if="not company">
            <t t-if="company_id" t-set="company" t-value="company_id"/>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()" t-set="company" t-value="o.company_id.sudo()"/>
            <t t-else="else" t-set="company" t-value="res_company"/>
        </t>
        
        <!-- Das eigentliche Header-HTML (kopiert aus kas_external_report) -->
        <div class="header">
            <div class="row">
                <div class="col-6 mb-4" style="padding-left: 20px;">
                    <img t-if="company.contract_logo" t-att-src="image_data_uri(company.contract_logo)" style="max-width: 100%;" alt="Logo"/>
                </div>
            </div>
        </div>
    </template>
    
    <!-- NEUES, EIGENSTÃ„NDIGES FOOTER-TEMPLATE -->
    
    <template id="kas_layout_footer">
        <!-- Multi-Company-Logik -->
        <t t-if="not o and docs" t-set="o" t-value="docs[0]"/>
        <t t-if="not company">
            <t t-if="company_id" t-set="company" t-value="company_id"/>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()" t-set="company" t-value="o.company_id.sudo()"/>
            <t t-else="else" t-set="company" t-value="res_company"/>
        </t>
        
        <!-- Das eigentliche Header-HTML (kopiert aus kas_external_report) -->
        <div class="footer">
            <div class="row">
                <div class="col-12" style="padding-left: 20px; padding-right: 20px;">
                    <img t-if="company.contract_footer" t-att-src="image_data_uri(company.contract_footer)" style="max-width: 100%;" alt="Logo"/>
                </div>
            </div>
        </div>
    </template>
</odoo>