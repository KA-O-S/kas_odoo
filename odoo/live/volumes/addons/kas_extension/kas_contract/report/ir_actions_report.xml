<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_saleorder_contract_master" model="ir.actions.report">
        <field name="name">Vertrag</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">kas_contract.report_contract_master</field>
        <field name="report_file">kas_contract.report_contract_master</field>
        <field name="print_report_name">'Vertrag (Master) - %s' % (object.name)</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>
    <!-- 1. Deaktiviert den Standard "Angebot / Auftrag"-Report -->
    <!-- Die ID `sale.action_report_saleorder` ist die Standard-ID von Odoo. -->
    <record id="sale.action_report_saleorder" model="ir.actions.report">
        <!-- Wir entfernen die Verknüpfung zum 'sale.order'-Modell. -->
        <field name="binding_model_id" eval="False"/>
    </record>

    <!-- 2. Deaktiviert die Standard "PRO-FORMA-Rechnung" -->
    <!-- Die ID `sale.action_report_pro_forma_invoice` ist die Standard-ID von Odoo. -->
    <record id="sale.action_report_pro_forma_invoice" model="ir.actions.report">
        <!-- Auch hier entfernen wir die Verknüpfung. -->
        <field name="binding_model_id" eval="False"/>
    </record>
</odoo>