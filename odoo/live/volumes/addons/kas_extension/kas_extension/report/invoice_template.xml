<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_account_move_kas">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <!-- <t t-call="kas_contract.kas_external_layout"> -->
                    <!-- HIER WIRD DIE payments_vals-VARIABLE FRÜHER DEFINIERT -->
                    <t t-set="payments_vals" t-value="o.sudo().invoice_payments_widget and o.sudo().invoice_payments_widget['content'] or []" />
                    <div class="page">

                        <!-- <div
                        style="position: absolute; top: 99mm; left: 0; width: 10mm; height: 0;
                        border-top: 1px solid black;"></div>
                        <div style="position: absolute; top: 198mm; left: 0; width: 10mm; height: 0; border-top: 1px solid
                        black;"></div>-->

                        <div class="oe_structure" />
                        <table style="width: 100%; border-collapse: collapse; margin-top: 10mm;">
                            <tbody>
                                <tr>
                                    <td
                                        style="text-align: left; font-size: 10px; padding-bottom: 5mm;">
                                            <div>
                                                <span t-field="o.company_id.name" />
                                                <span style="padding: 0 2px;">|</span>
                                                <span t-field="o.company_id.street" />
                                                <span style="padding: 0 2px;">|</span>
                                                <span t-field="o.company_id.zip" />
                                                <span style="padding: 0 2px;">|</span>
                                                <span t-field="o.company_id.city" />
                                                <br />
                                            </div>
                                    </td>
                                    <td rowspan="2" style="text-align: right;font-size: 12px;width: 20%;line-height: 150%;vertical-align: top;padding-top: 9mm;">
                                        <div> 
                                            Rechnungsdatum:<br/> 
                                            Zahlbar bis:<br/>
                                            <t t-if="o.period_performance">
                                                Leistungszeitraum:
                                            </t>
                                        </div>
                                    </td>
                                    <td rowspan="2" style="text-align: right; width: 15%;font-size: 12px;line-height: 150%;vertical-align: top;padding-top: 9mm;">
                                        <div>
                                            <span t-field="o.invoice_date" />
                                            <br/>
                                            <span t-field="o.invoice_date_due" />
                                            <br/>
                                            <span t-field="o.period_performance" />
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: left; vertical-align: top;font-size: 13px;line-height: 130%;">
                                        <div>
                                            <span t-field="o.partner_id.name" />
                                            <br/>
                                            <span t-field="o.partner_id.street" />
                                            <br/>
                                            <br/>
                                            <span t-field="o.partner_id.zip" />
                                            <span t-field="o.partner_id.city" />
                                            <div>
                                                <t t-set="o" t-value="o.with_context(lang=lang)" />
                                                <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat" /> 
                                                <!-- So that it appears in the footer of the report instead of the company VAT if it's set -->
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <table style="width: 100%; border-collapse: collapse;">
                            <tbody>
                                <tr>
                                    <td style="width: 70%;vertical-align: top;font-size: 16px;">
                                        <div style="font-weight: bold;">
                                            <span t-if="not proforma"></span>
                                            <span t-else="">PROFORMA</span>
                                            <span
                                                t-if="o.move_type == 'out_invoice' and o.state == 'posted'">
                                                Rechnung</span>
                                            <span
                                                t-elif="o.move_type == 'out_invoice' and o.state == 'draft'">
                                                Entwurfsrechnung</span>
                                            <span
                                                t-elif="o.move_type == 'out_invoice' and o.state == 'cancel'">
                                                Stornorechnung</span>
                                            <span
                                                t-elif="o.move_type == 'out_refund' and o.state == 'posted'">
                                                Gutschrift</span>
                                            <span
                                                t-elif="o.move_type == 'out_refund' and o.state == 'draft'">Entwurfs
                                                Gutschrift</span>
                                            <span
                                                t-elif="o.move_type == 'out_refund' and o.state == 'cancel'">Storno
                                                Gutschrift</span>
                                            <span t-elif="o.move_type == 'in_refund'">Lieferanten Gutschrift</span>
                                            <span t-elif="o.move_type == 'in_invoice'">Lieferanten Rechnung</span>
                                            <span t-if="o.invoice_number" t-field="o.invoice_number">INV/2023/0001</span>
                                        </div>
                                    </td>
                                    <td style="width: 30%; text-align: right;vertical-align: top;font-size: 14px;">
                                        <div>
                                            <t t-if="o.invoice_origin">   
                                                <t t-set="date_contract"
                                                    t-value="env['sale.order'].search([('name', '=', o.invoice_origin)], limit=1).date_order" />
                                                <div style="text-align: right;">
                                                    <t t-if="date_contract">
                                                        <span>
                                                            Vertrag vom: <t
                                                                    t-esc="date_contract.strftime('%d.%m.%Y')" />
                                                        </span>
                                                    </t>
                                                </div>
                                            </t>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <br/>
                        <br/>
                                <p style="font-size: 11px;">Sehr geehrte Damen und Herren,</p>
                                <t t-if="o.with_prepayment">
                                <!-- Variante fuer Vorkasse -->
                                    <p style="font-size: 11px;">hiermit stellen wir unsere Vorkasse-Rechnung gemäß Vertrag wie folgt:</p>
                                </t>
                                <t t-else="">
                                    <!-- Standard-Variante -->
                                    <p style="font-size: 11px;">hiermit berechnen wir Ihnen für die unsere Leistungserbringung gemäß
                                    Vertrag wie folgt:</p>
                                </t>
                                    <t t-set="display_discount"
                                    t-value="any(l.discount for l in o.invoice_line_ids)" />
                                <div class="oe_structure"></div>
                                <!-- Rechnungstabelle -->
                                <table class="table table-sm o_main_table table-borderless"
                                    name="invoice_line_table">
                                    <thead style="background-color: #f2f2f2;padding-top: 5px;padding-bottom: 5px;font-size: 12px;"> 
                                        <tr>
                                            <!-- SPALTE 1: Beschreibung -->
                                            <th name="th_description" class="text-start" style="text-align: left; width: 55%;">
                                                <span>Beschreibung</span>
                                            </th>
                                            <!-- SPALTE 2: Menge -->
                                            <th name="th_quantity" class="text-start" style="text-align: middle; width: 15%;">
                                                <span>Menge</span>
                                            </th>
                                            <!-- SPALTE 3: Einzelpreis -->
                                            <th name="th_priceunit"
                                                t-attf-class="text-start {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}" style="text-align: middle;width: 10%;">
                                                <span>EP (netto)</span>
                                            </th>
                                            <!-- SPALTE 4: Rabatt % -->
                                            <th name="th_discount" t-if="display_discount"
                                                t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}" style="text-align: middle;width: 5%;">
                                                <span>Disc.%</span>
                                            </th>
                                            <!-- <th
                                            name="th_taxes" t-attf-class="text-start {{ 'd-none
                                            d-md-table-cell' if report_type == 'html' else ''
                                            }}"><span>Steuer</span></th>-->
                                            
                                            <!-- SPALTE 5: Gesamtpreis -->
                                            <th name="th_subtotal" class="text-end" style="text-align: middle;width: 15%;">
                                                <span>Gesamtpreis</span>
                                            </th>
                                        </tr>
                                    </thead>
                                    <!-- Inhalt der Abrechnung") -->
                                    <tbody class="invoice_tbody" style="line-height: 1.5;font-size: 10px;">
                                        <t t-set="current_subtotal" t-value="0" />
                                        <t t-set="current_total" t-value="0" />
                                        <t t-set="lines"
                                            t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)" />

                                        <t t-foreach="lines" t-as="line">
                                            <t t-set="current_subtotal"
                                                t-value="current_subtotal + line.price_subtotal" />
                                            <t t-set="current_total"
                                                t-value="current_total + line.price_total" />

                                            <tr
                                                t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                                <!-- Fall 1: Normale Produktzeile (z.B. "Beispiel Stundenerfassung") -->
                                                <t t-if="line.display_type == 'product'"
                                                    name="account_invoice_line_accountable">
                                                    <td name="account_invoice_line_name" style="text-align: left;padding-top: 5px;">
                                                        <span t-if="line.name" t-field="line.name"
                                                            t-options="{'widget': 'text'}">Bacon
                                                            Burger</span>
                                                    </td>
                                                    <td name="td_quantity" class="text-start" style="text-align: right;padding-top: 5px;">
                                                        <span t-field="line.quantity">3.00</span>
                                                        <span t-field="line.product_uom_id"
                                                            groups="uom.group_uom">units</span>
                                                    </td>
                                                    <td name="td_price_unit"
                                                        t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}" style="text-align: right;padding-top: 5px;">
                                                        <span class="text-nowrap" t-field="line.price_unit" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}">9.00</span>
                                                    </td>
                                                    <td name="td_discount" t-if="display_discount"
                                                        t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}" style="text-align: middle;padding-top: 5px;">
                                                        <span class="text-nowrap"
                                                            t-field="line.discount">0</span>
                                                    </td>
                                                    <!-- <td
                                                    name="td_taxes" t-attf-class="text-start {{
                                                    'd-none d-md-table-cell' if report_type ==
                                                    'html' else '' }}">
                                                        <span t-out="', '.join(map(lambda x: (x.invoice_label or x.name), line.tax_ids))"
                                                    id="line_tax_ids">Tax 15%</span>
                                                    </td>-->
                                                    <td name="td_subtotal"
                                                        class="text-end o_price_total" style="text-align: right;">
                                                        <span class="text-nowrap"
                                                            t-field="line.price_subtotal">27.00</span>
                                                    </td>
                                                </t>
                                                <!-- Fall 2: Abschnitts-Titel -->
                                                <t t-elif="line.display_type == 'line_section'">
                                                    <td colspan="99" style="text-align: left;">
                                                        <span t-field="line.name"
                                                            t-options="{'widget': 'text'}">A section
                                                            title</span>
                                                    </td>
                                                    <t t-set="current_section" t-value="line" />
                                                    <t t-set="current_subtotal" t-value="0" />
                                                </t>
                                                <!-- Fall 3: Notiz-Zeile -->
                                                <t t-elif="line.display_type == 'line_note'">
                                                    <td colspan="99">
                                                        <span t-field="line.name"
                                                            t-options="{'widget': 'text'}">A note,
                                                            whose content usually applies to the
                                                            section or product above.</span>
                                                    </td>
                                                </t>
                                            </tr>

                                            <t
                                                t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                                <tr class="is-subtotal text-end">
                                                    <td colspan="99" style="text-align: middle;">
                                                        <strong class="mr16">Nettobetrag</strong>
                                                        <span
                                                            t-out="current_subtotal"
                                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                        >
                                                            31.05</span>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </tbody>
                                </table>
                                <!-- ================================================================== -->
                                <!-- END: RECHNUNGSZEILEN-TABELLE                                       -->
                                <!-- ================================================================== -->
                                <div>
                                    <div id="right-elements"
                                        t-attf-class="#{'col-5' if report_type != 'html' else 'col-12 col-md-5'} ms-5 d-inline-block float-end">
                                        <div id="total" class="clearfix row">
                                            <div class="ms-auto">
                                                <!-- ================================================================== -->
                                                <!-- START: SUMMENBLOCK (Nettobetrag, USt, Gesamt)                    -->
                                                <!-- Dieser Block ruft das Template auf, das die Summen anzeigt.    -->
                                                <!-- Die Aenderungen am Layout der Summen muessen in dem          -->
                                                <!-- aufgerufenen Template 'document_tax_totals_template_kas'     -->
                                                <!-- gemacht werden.                                              -->
                                                <!-- ================================================================== -->
                                            
                                                <table
                                                    class="table table-sm table-borderless avoid-page-break-inside" style="width: 100%;">   

                                                    <!-- Aufruf des Tax Toal Templates, welches am ende der Datei definiert ist -> Tax
                                                    totals-->
                                                    <t t-set="tax_totals" t-value="o.tax_totals" />
                                                    <t
                                                        t-call="kas_extension.document_tax_totals_template_kas" />

                                                    <!-- Zahlungsstatus wenn bereits Zahlungen erfolgt-->
                                                    <!-- <t
                                                    t-if="print_with_payments"-->
                                                    <t t-if="o.payment_state != 'invoicing_legacy'">
                                                        <t t-set="payments_vals"
                                                            t-value="o.sudo().invoice_payments_widget and o.sudo().invoice_payments_widget['content'] or []" />
                                                        <t t-foreach="payments_vals"
                                                            t-as="payment_vals">
                                                            <tr style="line-height: 1.5;font-size: 11px;"
                                                                t-if="payment_vals['is_exchange'] == 0">
                                                                <td style="width: 80%;">
                                                                    <i
                                                                        class="oe_form_field text-end oe_payment_label">Bezahlt am <t
                                                                            t-out="payment_vals['date']"
                                                                            t-options='{"widget": "date"}'>
                                                                        2021-09-19</t></i>
                                                                </td>
                                                                <td style="width: 20%; text-align: right;" class="text-end">
                                                                    <span
                                                                        t-out="payment_vals['amount']"
                                                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'>
                                                                        20.00</span>
                                                                </td>
                                                            </tr>
                                                        </t>
                                                        <t t-if="len(payments_vals) > 0">
                                                            <tr class="border-black fw-bold" style="line-height: 1.5;font-size: 11px;">
                                                                <td style="width: 80%;">
                                                                    <strong>
                                                                        <i>
                                                                            Restbetrag fällig
                                                                        </i>
                                                                    </strong>
                                                                </td>
                                                                <td style="width: 20%; text-align: right;" class="text-end">
                                                                    <strong>
                                                                        <i>
                                                                    <span
                                                                        t-field="o.amount_residual">
                                                                        11.05</span>
                                                                        </i>
                                                                    </strong>
                                                                </td>
                                                            </tr>
                                                        </t>
                                                    </t>
                                                </table>
                                            </div>
                                        </div>
                                        <div class="mb-2">
                                            <p class="text-end lh-sm" style="line-height: 1.5;font-size: 11px;"
                                                t-if="o.company_id.display_invoice_amount_total_words">
                                                Gesamtbetrag in Worten: <br />
                                                <small
                                                    class="text-muted lh-sm">
                                                    <span t-field="o.amount_total_words" style="line-height: 1.5;font-size: 11px;">Dreißig Euro und fünf Cents</span>
                                                </small>
                                            </p>
                                        </div>
                                        <!-- <t
                                        t-call="account.document_tax_totals_company_currency_template"/>-->
                                    </div>
                                    <!-- Zahlungsbedingungen -> nur wenn das Feld Zahlungsbedingungen einen Text enthaelt-->                                     
                                    <div id="payment_term" class="clearfix">
                                        <div class="justify-text">
                                            <p style="line-height: 1.5;font-size: 11px;" t-if="not is_html_empty(o.fiscal_position_id.note)"
                                                name="note" class="mb-2">
                                                <span t-field="o.fiscal_position_id.note" />
                                            </p> 
                                        </div>
                                        <t t-set="payment_term_details"
                                            t-value="o.payment_term_details" />
                                        <div class="mb-3">
                                            <span style="line-height: 1.5;font-size: 11px;" id="payment_terms_note_id"
                                                t-if="o.invoice_payment_term_id.note"
                                                t-field="o.invoice_payment_term_id.note"
                                                name="payment_term">Zahlung innerhalb von 30 Kalendertagen</span>
                                            <br />
                                            <t
                                                t-if="o.invoice_payment_term_id.display_on_invoice and payment_term_details">
                                                <div t-if='o.show_payment_term_details'
                                                    id="total_payment_term_details_table"
                                                    class="row">
                                                    <div
                                                        t-attf-class="#{'col-10' if report_type != 'html' else 'col-sm-10 col-md-9'}">
                                                        <t
                                                            t-if="o._is_eligible_for_early_payment_discount(o.currency_id,o.invoice_date)">
                                                            <td style="line-height: 1.5;font-size: 11px;">
                                                                <span
                                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                                    t-out="o.invoice_payment_term_id._get_amount_due_after_discount(o.amount_total, o.amount_tax)">
                                                                30.00</span> fällig wenn bezahlt vor <span
                                                                    t-out="o.invoice_payment_term_id._get_last_discount_date_formatted(o.invoice_date)">
                                                                2024-01-01</span>
                                                            </td>
                                                        </t>
                                                        <t t-if="len(payment_term_details) > 1"
                                                            t-foreach="payment_term_details"
                                                            t-as="term">
                                                            <div>
                                                                <span style="line-height: 1.5;font-size: 11px;" t-out="term_index + 1">1</span>
                                                                - Teilzahlung von <t
                                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                                    t-out="term.get('amount')"
                                                                    class="text-end">31.05</t>
                                                                <span style="line-height: 1.5;font-size: 11px;"> fällig am </span>
                                                                <t
                                                                    t-out="term.get('date')"
                                                                    class="text-start" style="line-height: 1.5;font-size: 11px;">2024-01-01</t>
                                                            </div>
                                                        </t>
                                                    </div>
                                                </div>
                                            </t>
                                        </div>
                                        <!-- <div
                                        class="mb-3" t-if="o.move_type in ('out_invoice',
                                        'in_refund') and o.payment_reference">
                                            <p name="payment_communication">
                                                Payment Communication: <span class="fw-bold" t-field="o.payment_reference">INV/2023/00001</span>
                                            </p>
                                        </div>-->

                                        <t t-set="show_qr"
                                            t-value="o.display_qr_code and o.amount_residual > 0" />
                                        <div t-if="not show_qr" name="qr_code_placeholder"
                                            class="oe_structure"></div>
                                        <div id="qrcode" class="d-flex mb-3 avoid-page-break-inside"
                                            t-else="">
                                            <div class="qrcode me-3" id="qrcode_image">
                                                <t t-set="qr_code_url"
                                                    t-value="o._generate_qr_code(silent_errors=True)" />
                                                <p t-if="qr_code_url" class="position-relative mb-0">
                                                    <img t-att-src="qr_code_url" />
                                                    <img
                                                        src="/account/static/src/img/Odoo_logo_O.svg"
                                                        id="qrcode_odoo_logo"
                                                        class="top-50 start-50 position-absolute bg-white border border-white border-3 rounded-circle"
                                                    />
                                                </p>
                                            </div>
                                            <div class="d-inline text-muted lh-sm fst-italic"
                                                id="qrcode_info" t-if="qr_code_url" style="line-height: 1.5;font-size: 11px;">
                                                <p>Scanne diesen QR Code, um<br />mit deinem Handy zu bezahlen</p>
                                            </div>
                                        </div>
                                        <!-- Bedingungen (das Textfeld neben Nettobetrag-->
                                        <div t-attf-style="#{'text-align:justify;text-justify:inter-word;' if o.company_id.terms_type != 'html' else ''}"
                                            t-if="not is_html_empty(o.narration)" name="comment">
                                            <span style="line-height: 1.5;font-size: 11px;" t-field="o.narration" />
                                        </div>
                                    </div>
                                </div>
                        <div>
                            <t t-if="o.with_timesheet">
                                <p style="line-height: 1.5;font-size: 11px;">Die Leistungserbringung wird per beiliegendem Zeitnachweis
                                    dokumentiert.</p>
                            </t>
                            <p style="line-height: 1.5;font-size: 11px;">
                                Wir bitten Sie, den 
                                <t t-if="payments_vals and len(payments_vals) > 0">Restbetrag</t>
                                <t t-else="">Gesamtbetrag</t>
                                unter Angabe der Rechnungsnummer auf eines unserer untenstehenden Bankkonten zu überweisen.</p>
                        </div>
                    </div>
                <!-- </t> -->
            </t>
        </t>
    </template>
    <template id="document_tax_totals_template_kas">
        <!-- Tax Total Template
            Generic template to display tax totals in pdf reports.
            Used by invoices, SO and PO.

            ARGUMENTS:
            - tax_totals: dict in the form generated by account.move's _get_tax_totals.
            Nettobetrag als nächstes
        -->
        <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
            <tr class="border-black o_subtotal">
                <!-- Spalte 1: Titel des Nettobetrags, z.B. "Nettobetrag" -->
                <td style="width: 80%;text-align: right; line-height: 1.5;border-top: 1px solid black !important;padding-top: 5px;font-size: 12px;">
                    <strong t-out="subtotal['name']">Nettobetrag</strong>
                </td>
                <!-- Spalte 2: Formatierter Nettobetrag" -->
                <td class="text-end" style="width: 20%; text-align: right;line-height: 1.5;border-top: 1px solid black !important;padding-top: 5px;font-size: 12px;">
                    <span
                        t-att-class="oe_subtotal_footer_separator"
                        t-out="subtotal['formatted_amount']"
                    >27.00</span>
                </td>
            </tr>
        <!-- Pro Steuergruppe wird eine neue Tabellenzeile (tr) erstellt. -->
            <!-- HIer werden die Werte maunell berechnet -->
            <t t-foreach="tax_totals['groups_by_subtotal'].get(subtotal['name'], [])" t-as="tax_group"> 
                <tr>
                    <td style="width: 80%;text-align: right;line-height: 1.5;font-size: 12px;">
                        <span t-out="tax_group['tax_group_name']"/>
                    </td>
                    <td style="width: 20%;text-align: right;line-height: 1.5;font-size: 12px;">
                        <span t-out="tax_group['formatted_tax_group_amount']" />
                    </td>
                </tr>
            </t>

            <!-- <t t-set="subtotal_to_show" t-value="subtotal['name']" />
            <t t-call="account.tax_groups_totals" /> -->
        </t>
       <tr t-if="'formatted_rounding_amount' in tax_totals and tax_totals['rounding_amount'] != 0">
            <td>Rounding</td>
            <td class="text-end">
                <span t-out="tax_totals['formatted_rounding_amount']">0</span>
            </td>
        </tr>
