<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Erbt die Standard-Formularansicht fuer res.company -->
        <record id="view_company_form_kas_extension" model="ir.ui.view">
            <field name="name">res.company.form.kas.extension</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <!--
                    Sucht das Feld 'vat' (USt-IdNr.) und fuegt das neue Feld
                    direkt danach ein.
                -->
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="sequence_prefix"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>